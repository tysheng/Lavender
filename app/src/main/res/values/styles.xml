<resources>

    <style name="CollapsingToolbarText">
        <item name="android:textColor">@color/md_grey_100</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_grey_50</item>
        <item name="android:textColorPrimary">@color/md_grey_50</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionMenuTextColor">@color/md_grey_700</item>
        <item name="actionMenuTextColor">@color/md_grey_700</item>
        <item name="android:itemBackground">@color/md_grey_600</item>
        <!--<item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent..Enter.Style</item>-->
    </style>

    <style name="Animation.Activity.Translucent..EnterAndExit.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.ALBUM" parent="AppTheme">
        <item name="android:windowBackground">@color/md_grey_800</item>
        <item name="colorPrimary">@color/md_grey_800</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/md_grey_200</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

</resources>
